{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  // "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
  "plugins": ["react", "prettier"],
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-return-assign": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "no-restricted-syntax": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "quotes": [
      "warn",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "prettier/prettier": ["error", {
      "trailingComma": "none",
      "arrowParens": "avoid"
    }],
    "indent": ["error", 2],
    "semi": ["error", "always"]
  }
}
